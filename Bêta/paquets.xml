<!-- DTD (Document Type Definition) interne, servant à définir l'architecture du document XML et la hiérarchie existant entre ses balises-->
<!DOCTYPE paquets [
    <!ELEMENT paquets (dist*)>          <!-- Balise racine du corps du document XML -->
    <!ELEMENT cmd (perso, sio)>         <!-- Définition du contenu de la balise "cmd" -->
    <!ATTLIST cmd cat CDATA #REQUIRED>  <!-- Définition de l'attribut de la balise "cmd". Il peut contenit n'importe quelle chaîne de caractères et est OBLIGATOIRE -->
    <!ELEMENT perso (#PCDATA)>          <!-- Définition du contenu de la balise "perso" -->
    <!ELEMENT sio (#PCDATA)>            <!-- Définition du contenu de la balise "sio" -->
]>

